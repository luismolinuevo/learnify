generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model LearningPain {
  id            Int      @id @unique @default(autoincrement())
  skill         String
  skillLevel    String
  dailyHours    String
  deadline      String
  whyLearn      String?
  learningStyle String[]
  comments      String   @db.VarChar(3000)
}

model Level {
  id              Int       @id @default(autoincrement())
  title           String
  reason          String
  what            String
  hoursToComplete Int
  sublevels       Sublevel[]
}

model Sublevel {
  id            Int      @id @default(autoincrement())
  title         String
  what          String
  how           String
  resources     Json
  level         Level    @relation(fields: [levelId], references: [id])
  levelId       Int

  @@index([levelId])
}
