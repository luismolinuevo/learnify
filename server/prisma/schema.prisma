generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model LearningPain {
  id            Int      @id @unique @default(autoincrement())
  skill         String
  skillLevel    String
  dailyHours    String
  deadline      String
  whyLearn      String?
  learningStyle String[]
  comments      String   @db.VarChar(3000)
}

model Level {
  id          Int    @id @unique @default(autoincrement())
  title       String
  description String @db.VarChar(3000)
  timeLine    String
  project     Json?
}

model SubLevel {
  id          Int    @id @unique @default(autoincrement())
  title       String
  description String @db.VarChar(3000)
  timeLine    String
  project     Json?
}
