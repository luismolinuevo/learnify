generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model LearningPlan {
  id            Int      @id @unique @default(autoincrement())
  skill         String
  skillLevel    String
  dailyHours    String?
  deadline      String?
  whyLearn      String?
  learningStyle String[]
  comments      String   @db.VarChar(3000)
  levels        Level[]
}

model Level {
  id              Int          @id @default(autoincrement())
  title           String
  reason          String
  what            String
  hoursToComplete Int
  sublevels       Sublevel[]
  plan            LearningPlan @relation(fields: [planId], references: [id])
  planId          Int

  @@index([planId])
}

model Sublevel {
  id        Int    @id @default(autoincrement())
  title     String
  what      String
  how       String
  resources Json?
  level     Level  @relation(fields: [levelId], references: [id])
  levelId   Int

  @@index([levelId])
}
